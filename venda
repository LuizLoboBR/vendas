      "source": [
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "import numpy as np\n",
        "import os\n",
        "import base64\n",
        "from io import BytesIO\n",
        "\n",
        "# Caminho da sua planilha\n",
        "file_path = \"venda cavaguti.xlsx\"\n",
        "\n",
        "# Carregar os dados\n",
        "df = pd.read_excel(file_path, sheet_name=\"Planilha1\")\n",
        "\n",
        "# Selecionar colunas relevantes\n",
        "df_limpo = df[[\"VENDEDOR\", \"META\", \"JULHO\", \"AGOSTO\", \"SETEMBRO\"]].copy()\n",
        "\n",
        "# Calcular totais e saldos\n",
        "df_limpo[\"TOTAL_TRIMESTRE\"] = df_limpo[[\"JULHO\", \"AGOSTO\", \"SETEMBRO\"]].sum(axis=1)\n",
        "df_limpo[\"SALDO_META\"] = df_limpo[\"META\"] - df_limpo[\"TOTAL_TRIMESTRE\"]\n",
        "df_limpo[\"SALDO_META\"] = np.where(df_limpo[\"SALDO_META\"] < 0, 0, df_limpo[\"SALDO_META\"])\n",
        "df_limpo[\"% ATINGIDO\"] = (df_limpo[\"TOTAL_TRIMESTRE\"] / df_limpo[\"META\"]) * 100\n",
        "\n",
        "# Criar pasta de saída\n",
        "output_dir = \"relatorios_html\"\n",
        "os.makedirs(output_dir, exist_ok=True)\n",
        "\n",
        "for _, row in df_limpo.iterrows():\n",
        "    vendedor = row[\"VENDEDOR\"]\n",
        "\n",
        "    # Criar gráfico pizza (com % + valor)\n",
        "    valores = [row[\"TOTAL_TRIMESTRE\"], row[\"SALDO_META\"]]\n",
        "    labels = [\"Atingido\", \"Faltante\"]\n",
        "    cores = [\"#4CAF50\", \"#FF7043\"]\n",
        "\n",
        "    def func_pct_valor(pct, allvals):\n",
        "        valor = int(round(pct/100.*np.sum(allvals)))\n",
        "        return f\"{pct:.1f}%\\nR$ {valor:,.0f}\".replace(\",\", \".\")\n",
        "\n",
        "    fig, ax = plt.subplots(figsize=(5, 5))\n",
        "    wedges, texts, autotexts = ax.pie(\n",
        "        valores,\n",
        "        labels=labels,\n",
        "        autopct=lambda pct: func_pct_valor(pct, valores),\n",
        "        colors=cores,\n",
        "        startangle=90,\n",
        "        textprops=dict(color=\"white\", weight=\"bold\", fontsize=10)\n",
        "    )\n",
        "    ax.set_title(f\"Meta de {vendedor}\")\n",
        "\n",
        "    # Converter gráfico em base64\n",
        "    buf = BytesIO()\n",
        "    plt.savefig(buf, format=\"png\", bbox_inches=\"tight\")\n",
        "    buf.seek(0)\n",
        "    img_base64 = base64.b64encode(buf.read()).decode(\"utf-8\")\n",
        "    plt.close(fig)\n",
        "\n",
        "    # HTML responsivo\n",
        "    html_content = f\"\"\"\n",
        "    <html>\n",
        "    <head>\n",
        "        <meta charset=\"UTF-8\">\n",
        "        <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n",
        "        <title>Relatório - {vendedor}</title>\n",
        "        <style>\n",
        "            body {{\n",
        "                font-family: Arial, sans-serif;\n",
        "                margin: 0;\n",
        "                padding: 0;\n",
        "                background: #f8f9fa;\n",
        "            }}\n",
        "            .container {{\n",
        "                max-width: 500px;\n",
        "                margin: auto;\n",
        "                padding: 15px;\n",
        "            }}\n",
        "            .card {{\n",
        "                background: #fff;\n",
        "                border-radius: 15px;\n",
        "                box-shadow: 0 4px 6px rgba(0,0,0,0.1);\n",
        "                padding: 20px;\n",
        "                text-align: center;\n",
        "            }}\n",
        "            h2 {{\n",
        "                color: #333;\n",
        "                font-size: 22px;\n",
        "                margin-bottom: 15px;\n",
        "            }}\n",
        "            p {{\n",
        "                font-size: 16px;\n",
        "                margin: 8px 0;\n",
        "            }}\n",
        "            img {{\n",
        "                max-width: 100%;\n",
        "                height: auto;\n",
        "                margin-top: 15px;\n",
        "                border-radius: 10px;\n",
        "            }}\n",
        "            a {{\n",
        "                display: inline-block;\n",
        "                margin-top: 20px;\n",
        "                text-decoration: none;\n",
        "                background: #4CAF50;\n",
        "                color: white;\n",
        "                padding: 10px 20px;\n",
        "                border-radius: 8px;\n",
        "            }}\n",
        "            a:hover {{\n",
        "                background: #45a049;\n",
        "            }}\n",
        "        </style>\n",
        "    </head>\n",
        "    <body>\n",
        "        <div class=\"container\">\n",
        "            <div class=\"card\">\n",
        "                <h2>Relatório de {vendedor}</h2>\n",
        "                <p><b>Meta:</b> R$ {row['META']:.2f}</p>\n",
        "                <p><b>Atingido:</b> R$ {row['TOTAL_TRIMESTRE']:.2f}</p>\n",
        "                <p><b>Falta:</b> R$ {row['SALDO_META']:.2f}</p>\n",
        "                <p><b>% Atingido:</b> {row['% ATINGIDO']:.2f}%</p>\n",
        "                <img src=\"data:image/png;base64,{img_base64}\" alt=\"Gráfico de {vendedor}\">\n",
        "                <a href=\"index.html\">⬅ Voltar</a>\n",
        "            </div>\n",
        "        </div>\n",
        "    </body>\n",
        "    </html>\n",
        "    \"\"\"\n",
        "\n",
        "    # Salvar HTML individual\n",
        "    file_name = os.path.join(output_dir, f\"{vendedor.replace(' ', '_')}.html\")\n",
        "    with open(file_name, \"w\", encoding=\"utf-8\") as f:\n",
        "        f.write(html_content)\n",
        "\n",
        "# Criar index.html com links para todos\n",
        "index_content = \"\"\"\n",
        "<html>\n",
        "<head>\n",
        "    <meta charset=\"UTF-8\">\n",
        "    <meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n",
        "    <title>Relatórios de Vendas</title>\n",
        "    <style>\n",
        "        body {\n",
        "            font-family: Arial, sans-serif;\n",
        "            background: #f8f9fa;\n",
        "            margin: 0;\n",
        "            padding: 20px;\n",
        "            text-align: center;\n",
        "        }\n",
        "        h1 {\n",
        "            color: #333;\n",
        "            margin-bottom: 20px;\n",
        "        }\n",
        "        a {\n",
        "            display: block;\n",
        "            margin: 10px auto;\n",
        "            padding: 12px;\n",
        "            background: #4CAF50;\n",
        "            color: white;\n",
        "            text-decoration: none;\n",
        "            border-radius: 8px;\n",
        "            font-size: 18px;\n",
        "            max-width: 300px;\n",
        "        }\n",
        "        a:hover {\n",
        "            background: #45a049;\n",
        "        }\n",
        "    </style>\n",
        "</head>\n",
        "<body>\n",
        "    <h1>Relatórios de Vendedores</h1>\n",
        "\"\"\"\n",
        "\n",
        "for vendedor in df_limpo[\"VENDEDOR\"]:\n",
        "    file_name = f\"{vendedor.replace(' ', '_')}.html\"\n",
        "    index_content += f'<a href=\"{file_name}\">{vendedor}</a>\\n'\n",
        "\n",
        "index_content += \"</body></html>\"\n",
        "\n",
        "with open(os.path.join(output_dir, \"index.html\"), \"w\", encoding=\"utf-8\") as f:\n",
        "    f.write(index_content)\n",
        "\n",
        "print(f\"Relatórios HTML gerados em: {output_dir}\")\n"
      ]
    }
  ]
}